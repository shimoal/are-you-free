{
	"extends": ["tslint:latest", "tslint-react", "tslint-config-prettier"],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js",
			"src/__tests__/*.test.js"
		]
	},
	"rules": {
		"jsx-no-lambda": false,
		"member-access": [true, "no-public"],
		"no-submodule-imports": false,
		"jsx-boolean-value": false
	}
}
